<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="alwaysUseFullPath" value="true"/>
        <property name="urlMap">
            <map>
                <!-- WARNING: Mappings are sensitive to order in which they are placed in this list -->
                <!-- Workspace Jobs Controllers -->
                <entry key="/**/workspace/jobs" value-ref="workspaceJobsController"/>
                <entry key="/**/workspace/jobs/**" value-ref="workspaceJobsController"/>
                <entry key="/**/workspace/jobs/**/log">
                    <bean class="org.systemsbiology.addama.services.execution.mvc.LogsController" autowire="byType">
                        <property name="jobPath" value="/workspace/jobs"/>
                    </bean>
                </entry>
                <entry key="/**/workspace/jobs/**/outputs/**/query">
                    <bean class="org.systemsbiology.addama.services.execution.mvc.OutputsQueryController"
                          autowire="byType">
                        <property name="jobPath" value="/workspace/jobs"/>
                    </bean>
                </entry>
                <entry key="/**/workspace/jobs/**/outputs/**">
                    <bean class="org.systemsbiology.addama.services.execution.mvc.OutputsController" autowire="byType">
                        <property name="jobPath" value="/workspace/jobs"/>
                    </bean>
                </entry>

                <!-- Jobs Controllers -->
                <entry key="/**/execution" value-ref="jobsController"/>
                <entry key="/**/jobs" value-ref="jobsController"/>
                <entry key="/**/jobs/*" value-ref="jobsController"/>
                <entry key="/**/jobs/*/log">
                    <bean class="org.systemsbiology.addama.services.execution.mvc.LogsController" autowire="byType">
                        <property name="jobPath" value="/jobs"/>
                    </bean>

                </entry>
                <entry key="/**/jobs/*/outputs/**/query">
                    <bean class="org.systemsbiology.addama.services.execution.mvc.OutputsQueryController"
                          autowire="byType">
                        <property name="jobPath" value="/jobs"/>
                    </bean>
                </entry>
                <entry key="/**/jobs/*/outputs/**">
                    <bean class="org.systemsbiology.addama.services.execution.mvc.OutputsController" autowire="byType">
                        <property name="jobPath" value="/jobs"/>
                    </bean>
                </entry>

                <!-- Viewer Controllers -->
                <entry key="/**">
                    <bean class="org.systemsbiology.addama.services.execution.mvc.ViewerController" autowire="byType"/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="jobsController" class="org.systemsbiology.addama.services.execution.mvc.JobsController"
          autowire="byType"/>

    <bean id="workspaceJobsController" class="org.systemsbiology.addama.services.execution.mvc.WorkspaceJobsController"
          autowire="byType"/>

</beans>

