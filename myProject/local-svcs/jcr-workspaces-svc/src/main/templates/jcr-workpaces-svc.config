{
    service: {
        uri: "/addama/services/repositories/jcr-workspaces-svc",
        url: "https://informatics.example.org/jcr-workspaces-svc",
        searchable: true,
        label: "JCR Workspaces Service"
    },
    mappings: [
         {
            uri: "/addama/repositories/workspaces",
            label: "User Workspaces"
         }
    ],
    locals: [
         {
             uri: "/addama/repositories/workspaces",
             rmiserver: "rmi://hostname:port/rmiservername",
             username: "username",
             password: "password",
             rootPath: "/local/temp/path",
             datasource: {
                 classname: "com.mysql.jdbc.Driver",
                 jdbcurl: "jdbc:mysql://hostname:port/databasename",
                 username: "username",
                 password: "password"
             }
         }
    ]
}
