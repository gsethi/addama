<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/app-contexts/*.xml
            classpath*:/addama-properties.xml
            classpath*:/service-config.xml
            classpath*:/filter-registration.xml
            classpath*:/apiKeyHttpClientTemplate.xml
        </param-value>
    </context-param>

    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath*:log4j.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>fsrepos</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>fsrepos</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addama-version</servlet-name>
        <servlet-class>org.systemsbiology.addama.commons.web.MavenPomVersionServlet</servlet-class>
        <init-param>
            <param-name>pom_location</param-name>
            <param-value>/META-INF/maven/org.systemsbiology.addama.coresvcs/fs-repositories-svc</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>addama-version</servlet-name>
        <url-pattern>/version</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>filter-registration</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>
            <param-name>targetBeanName</param-name>
            <param-value>filter-registration</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>filter-registration</filter-name>
        <servlet-name>fsrepos</servlet-name>
    </filter-mapping>

</web-app>