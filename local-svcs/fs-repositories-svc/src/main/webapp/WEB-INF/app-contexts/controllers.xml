<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="alwaysUseFullPath" value="true"/>
        <property name="urlMap">
            <map>
                <!-- WARNING: Mappings are sensitive to order in which they are placed in this list -->
                <entry key="/**/contents/**">
                    <bean class="org.systemsbiology.addama.fsutils.controllers.repositories.ContentsController"
                          autowire="byType"/>
                </entry>
                <entry key="/**/query/**">
                    <bean class="org.systemsbiology.addama.fsutils.controllers.repositories.QueryController"
                          autowire="byType"/>
                </entry>
                <entry key="/**/file/**">
                    <bean class="org.systemsbiology.addama.fsutils.controllers.repositories.FileController"
                          autowire="byType"/>
                </entry>
                <entry key="/**/zip">
                    <bean class="org.systemsbiology.addama.fsutils.controllers.repositories.ZipController"
                          autowire="byType"/>
                </entry>
                <entry key="/**">
                    <bean class="org.systemsbiology.addama.fsutils.controllers.repositories.ItemsController"
                          autowire="byType"/>
                </entry>
            </map>
        </property>
    </bean>

</beans>

