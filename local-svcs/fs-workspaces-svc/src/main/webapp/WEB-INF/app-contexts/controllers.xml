<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="alwaysUseFullPath" value="true"/>
        <property name="urlMap">
            <map>
                <!-- WARNING: Mappings are sensitive to order in which they are placed in this list -->
                <entry key="/**" value-ref="workspacesController"/>
                <entry key="/**/datasources" value-ref="datasourceController"/>
                <entry key="/**/query" value-ref="queryController"/>
            </map>
        </property>
    </bean>

    <!-- Controllers -->
    <bean id="workspacesController" class="org.systemsbiology.addama.workspaces.fs.rest.WorkspacesController"
          autowire="byType"/>

    <bean id="datasourceController" class="org.systemsbiology.addama.workspaces.fs.rest.DatasourceController"
          autowire="byType">
        <property name="supportedMethods">
            <list>
                <value>POST</value>
            </list>
        </property>
        <property name="fileLocalFactory">
            <bean class="org.systemsbiology.addama.workspaces.fs.callbacks.FSFileLocalFactory"/>
        </property>
    </bean>

    <bean id="queryController" class="org.systemsbiology.addama.workspaces.fs.rest.QueryController"
          autowire="byType">
        <property name="supportedMethods">
            <list>
                <value>GET</value>
            </list>
        </property>
    </bean>

</beans>
