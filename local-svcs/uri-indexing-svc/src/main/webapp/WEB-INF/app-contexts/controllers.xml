<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="alwaysUseFullPath" value="true"/>
        <property name="urlMap">
            <map>
                <!-- WARNING: Mappings are sensitive to order in which they are placed in this list -->
                <entry key="/**/batches" value-ref="batchIndexesController"/>
                <entry key="/**/batches/*" value-ref="batchIndexesController"/>
                <entry key="/**" value-ref="indexesController"/>
            </map>
        </property>
    </bean>

    <bean id="indexesController" class="org.systemsbiology.addama.coresvcs.indexes.IndexesController"
          autowire="byType"/>

    <bean id="batchIndexesController" class="org.systemsbiology.addama.coresvcs.indexes.BatchIndexesController"
          autowire="byType"/>

</beans>
