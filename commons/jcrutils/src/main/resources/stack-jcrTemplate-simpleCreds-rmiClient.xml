<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="jcrTemplate" class="org.springmodules.jcr.JcrTemplate">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="allowCreate" value="true"/>
    </bean>

    <bean id="sessionFactory" class="org.springmodules.jcr.JcrSessionFactory">
        <property name="repository" ref="repository"/>
        <property name="credentials">
            <bean class="javax.jcr.SimpleCredentials">
                <constructor-arg index="0" value="${primary-repo.rmiclient.username}"/>
                <constructor-arg index="1">
                    <bean factory-bean="repoPassword" factory-method="toCharArray"/>
                </constructor-arg>
            </bean>
        </property>
    </bean>

    <bean id="repoPassword" class="java.lang.String">
        <constructor-arg index="0" type="java.lang.String" value="${primary-repo.rmiclient.password}"/>
    </bean>

    <bean id="repository" factory-bean="rmiClientFactory" factory-method="getRepository">
        <constructor-arg value="${primary-repo.rmiclient.url}"/>
    </bean>

    <bean id="rmiClientFactory" class="org.apache.jackrabbit.rmi.client.ClientRepositoryFactory"/>

</beans>