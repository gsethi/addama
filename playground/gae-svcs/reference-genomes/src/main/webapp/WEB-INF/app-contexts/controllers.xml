<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="alwaysUseFullPath" value="true"/>
        <property name="urlMap">
            <map>
                <entry key="/**">
                    <bean class="org.systemsbiology.addama.gaesvcs.refgenome.web.GenomeBuildAndSequenceController">
                        <property name="referenceGenomeServersByBuild">
                            <map>
                                <entry key="hg18" value-ref="hg18server"/>
                                <entry key="s288c" value-ref="s288cServer"/>
                                <entry key="mm9" value-ref="musculus37server"/>
                                <entry key="musculus37" value-ref="musculus37server"/>
                            </map>
                        </property>
                        <property name="supportedMethods">
                            <list>
                                <value>GET</value>
                                <value>HEAD</value>
                            </list>
                        </property>
                    </bean>
                </entry>
                <entry key="/**/features/**">
                    <bean class="org.systemsbiology.addama.gaesvcs.refgenome.web.FeatureDatasourceController">
                        <property name="supportedMethods">
                            <list>
                                <value>GET</value>
                                <value>HEAD</value>
                            </list>
                        </property>
                    </bean>
                </entry>
                <entry key="/**/genes/**">
                    <bean class="org.systemsbiology.addama.gaesvcs.refgenome.web.GeneIdentityController">
                        <property name="supportedMethods">
                            <list>
                                <value>GET</value>
                                <value>HEAD</value>
                            </list>
                        </property>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>

</beans>
