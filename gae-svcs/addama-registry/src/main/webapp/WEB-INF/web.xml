<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/app-contexts/*.xml
        </param-value>
    </context-param>

    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/log4j.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>channel-disconnect</servlet-name>
        <servlet-class>org.systemsbiology.addama.appengine.servlet.ChannelDisconnectServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>gaeregistry</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>channel-disconnect</servlet-name>
        <url-pattern>/_ah/channel/disconnected</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>gaeregistry</servlet-name>
        <url-pattern>/addama/*</url-pattern>
    </servlet-mapping>

    <!-- Order of Filters Matters -->
    <filter>
        <filter-name>filter-allow-through</filter-name>
        <filter-class>org.systemsbiology.addama.appengine.filters.AllowThroughFilter</filter-class>
    </filter>

    <filter>
        <filter-name>filter-authentication</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>
            <param-name>targetBeanName</param-name>
            <param-value>filter-authentication</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>filter-greenlist</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>
            <param-name>targetBeanName</param-name>
            <param-value>filter-greenlist</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>filter-directlink</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>
            <param-name>targetBeanName</param-name>
            <param-value>filter-directlink</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>filter-proxies</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>
            <param-name>targetBeanName</param-name>
            <param-value>filter-proxies</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>filter-allow-through</filter-name>
        <url-pattern>/_ah/channel/disconnected</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter-authentication</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter-greenlist</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter-directlink</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>filter-proxies</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

     <security-constraint>
        <web-resource-collection>
            <url-pattern>/html/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
