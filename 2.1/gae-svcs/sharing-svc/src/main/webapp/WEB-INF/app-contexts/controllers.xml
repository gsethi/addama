<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="alwaysUseFullPath" value="false"/>
        <property name="urlMap">
            <map>
                <entry key="/**/retrieve" value-ref="checkAccessController"/>
                <entry key="/**/update" value-ref="checkAccessController"/>
                <entry key="/**/delete" value-ref="checkAccessController"/>
            </map>
        </property>
    </bean>

    <bean id="checkAccessController" class="org.systemsbiology.addama.sharingsvc.web.CheckAccessController"/>

</beans>
